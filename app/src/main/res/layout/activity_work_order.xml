<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.biac.yifuwu.WorkOrder">

    <Button
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="翼服务-工单作业"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPeacockBlue"
        android:layout_alignParentTop="true"
        />

    <RelativeLayout
        android:id="@+id/simpleusermessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        >

        <ImageView
            android:id="@+id/photo"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:src="@drawable/curry"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/jobname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/photo"
            android:layout_centerHorizontal="true"
            android:text="宜昌现场岗 宋文山"
            android:textColor="@color/colorBlack"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/simpleusermessage"
        >

        <Button
            android:id="@+id/newworkorder"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/btnnewoeder"
            android:text="新工单：6件"
            android:textColor="@color/colorWhite"
            />

        <Button
            android:id="@+id/orderprocessing"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/newworkorder"
            android:layout_marginTop="10dp"
            android:background="@drawable/processing"
            android:text="处理中：2件"
            android:textColor="@color/colorBlack"
            />

        <Button
            android:id="@+id/orderdone"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/orderprocessing"
            android:layout_marginTop="10dp"
            android:background="@drawable/btndone"
            android:text="已完结"
            android:textColor="@color/colorWhite"
            />

        <Button
            android:id="@+id/back"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/orderdone"
            android:layout_marginTop="10dp"
            android:background="@drawable/enter"
            android:text="返回"
            android:textColor="@color/colorWhite"
            />

    </RelativeLayout>

</RelativeLayout>
