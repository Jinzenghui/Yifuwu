<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.biac.yifuwu.UserHome">

    <Button
        android:id="@+id/userhometitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="翼服务"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPeacockBlue"
        />

    <RelativeLayout
        android:id="@+id/usermessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userhometitle"
        >

        <ImageView
            android:id="@+id/userphoto"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/curry"
            />

        <TextView
            android:id="@+id/name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/userphoto"
            android:layout_alignTop="@id/userphoto"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:text="名称：宋文山"
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/job"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_toRightOf="@id/userphoto"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="工位：宜昌现场岗"
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/gift"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/job"
            android:layout_toRightOf="@id/userphoto"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="积分：710"
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/ranking"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/gift"
            android:layout_toRightOf="@id/userphoto"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="排名：15"
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/doneWorkNumbers"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ranking"
            android:layout_toRightOf="@id/userphoto"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="累计处理工单：37"
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/daysOfLogin"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/doneWorkNumbers"
            android:layout_toRightOf="@id/userphoto"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="累计登录天数：51"
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/dateOflastLogin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/daysOfLogin"
            android:layout_toRightOf="@id/userphoto"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="上次登录日期：2016-3-6"
            android:textColor="@color/colorBlack"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/billBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usermessage"
        >

        <TextView
            android:id="@+id/billBoardText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:background="@color/colorWhite"
            android:text="@string/lorem_ipsum"
            android:textSize="10sp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/billBoard"
        >

        <Button
            android:id="@+id/button1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/button_shape"
            android:text="工单作业"
            android:textSize="28sp"
            android:textColor="@color/colorWhite"
            />

        <Button
            android:id="@+id/button2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/button1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="160dp"
            android:background="@drawable/button_shape"
            android:text="网络查询"
            android:textSize="28sp"
            android:textColor="@color/colorWhite"
            />

        <Button
            android:id="@+id/button3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/button1"
            android:layout_alignLeft="@id/button1"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/button_shape"
            android:text="信号测试"
            android:textSize="28sp"
            android:textColor="@color/colorWhite"
            />

        <Button
            android:id="@+id/button4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/button2"
            android:layout_alignLeft="@id/button2"
            android:layout_marginTop="20dp"

            android:background="@drawable/button_shape"
            android:text="设置"
            android:textSize="28sp"
            android:textColor="@color/colorWhite"
            />

    </RelativeLayout>

</RelativeLayout>
